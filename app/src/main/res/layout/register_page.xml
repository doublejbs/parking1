<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="28dp"
        android:layout_marginTop="150dp"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/brandColumn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="브랜드" />

        <TextView
            android:id="@+id/Car_listColumn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="70dp"
            android:text="차 모델명"
            app:layout_constraintLeft_toRightOf="@id/brandColumn" />

        <TextView
            android:id="@+id/nicknameColumn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="80dp"
            android:text="별명 (최대 10자) "
            app:layout_constraintLeft_toRightOf="@id/Car_listColumn" />
    </android.support.constraint.ConstraintLayout>
    <android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="180dp"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="0dp"
       
        >

        <Spinner
            android:id="@+id/brand"
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_weight="1"></Spinner>

        <Spinner
            android:id="@+id/car_type"
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            app:layout_constraintLeft_toRightOf="@id/brand"></Spinner>

        <EditText
            android:id="@+id/nickname"
            android:maxLength="10"
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            app:layout_constraintLeft_toRightOf="@id/car_type" />

    </android.support.constraint.ConstraintLayout>

    <android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="248dp"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="0dp">

        <Button
            android:id="@+id/submit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="입력 하기" />


    </android.support.constraint.ConstraintLayout>

</android.support.constraint.ConstraintLayout>